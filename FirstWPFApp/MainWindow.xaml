<Window x:Class="FirstWPFApp.MainWindow"
        mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstWPFApp"
        Title="Unser Erstes Fenster" Height="250" Width="400">
    <StackPanel>
        <Button 
            x:Name="btnStart"
            Click="Button_Click">
            <StackPanel Orientation="Horizontal">
                <Rectangle Width="20" Height="20" Fill="Blue" />
                <Label Content="Klick Mich!" />
                <Rectangle Width="20" Height="20" Fill="Blue" />
            </StackPanel>
        </Button>
        <Label
            x:Name="lblGreeting"
            Content="noch nix passiert"
            HorizontalAlignment="Center"
            Height="50"
            Foreground="Blue"/>
    </StackPanel>
</Window>
