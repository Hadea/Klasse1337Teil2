<Window x:Class="ZipDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZipDemo"
        mc:Ignorable="d"
        Name="wndMain"
        DataContext="{Binding ElementName=wndMain}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="0" ItemsSource="{Binding ArchiveList}" SelectionMode="Single" SelectedItem="{Binding SelectedArchive}"/>
        <ListView Grid.Column="1" ItemsSource="{Binding ContentList}" SelectionMode="Single" SelectedItem="{Binding SelectedContent}"/>
        <Image Grid.Column="2" Source="{Binding SelectedImage}" Height="200" Width="200" Stretch="Uniform" />
    </Grid>
</Window>
